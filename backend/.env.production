# Production Environment Variables
# Copy this to .env and update with your production values

# Application
APP_NAME="FreeWill Video Platform"
ENVIRONMENT=production
DEBUG=false
INSTANCE_URL=https://your-domain.com

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=freewill
DATABASE_URL=postgresql://postgres:CHANGE_ME_STRONG_PASSWORD@postgres:5432/freewill

# Redis
REDIS_URL=redis://redis:6379/0

# Qdrant
QDRANT_URL=http://qdrant:6333

# File Storage
UPLOAD_DIR=uploads
PROCESSED_DIR=processed
FEDERATED_DIR=federated
MAX_UPLOAD_SIZE_MB=500
MAX_VIDEO_DURATION_SEC=180

# Authentication
SECRET_KEY=CHANGE_ME_GENERATE_STRONG_SECRET_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Gunicorn
GUNICORN_WORKERS=4

# Worker
WORKER_CONCURRENCY=4
TASK_QUEUE_NAME=video_tasks

# Moderation (optional)
MODERATION_ENABLED=false
MODERATION_API_KEY=
MODERATION_API_ENDPOINT=

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_TRACING=false

# AI/ML
VISION_MODEL_NAME=openai/clip-vit-base-patch32
TEXT_MODEL_NAME=all-MiniLM-L6-v2
USE_OLLAMA=false
OLLAMA_MODEL=smolvlm
OLLAMA_URL=http://localhost:11434
